.tui-back-to-top {
  z-index 12
  position fixed
  bottom: 25px
  left: 25px
  display: flex
  flex-direction: column
  align-items: center
  justify-content: space-around
  width 50px
  height 50px
  line-height: 1
  opacity 0.55
  border-radius: 100%
  background: #000000
  svg {
    width: 18px
    height 18px
  }
  font-size: $font-size-xs
  color: #fff
}