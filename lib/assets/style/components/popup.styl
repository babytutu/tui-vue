.tui-popup
  &-warp
    overflow: hidden;
    position: absolute;
    transform: translateZ(0);
    width: 80%;
    top: 50%;
    left: 10%;
    transform: translate3d(0, -50%, 0);
    border-radius: $border-radius;
    background-color: $color-bg-white;
    border-color: $color-border-gray
    font-size: $font-min-size;
    text-align: center
  &-content
    padding: 30px 20px;
    color: $color-dark ;
    word-break: break-all;
    word-break: break-word;
    border-bottom-color: $color-border-gray;
  &-button
    height: 44px;
    display: flex;
    line-height 44px
    &-confirm
      color: $color-primary;
    &-cancel
      color: $color-gray;
      border-left-color: $color-border-gray;
    button
      width: 100%;
      height: 100%;
      font-size: $font-size-s;

