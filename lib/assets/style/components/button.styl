.tui-button{
  width 100%
  height 50px
  line-height 50px
  text-align center
  border-color: $color-border-dark
  color: $color-dark
  font-size: $font-size-l
  &.dark{
    background $color-dark
    border-color: $color-dark
    color #fff
  }
  &.red{
    background: $color-red
    border-color: $color-red
    color #fff
  }
  &.link{
    border: none
    background: none
    color: $color-blue
  }
  &.small{
    height 25px
    line-height 25px
    padding 0 20px
    font-size: $font-size-xs
  }
  &.large {
    height: 60px;
    line-height: 60px;
  }
  &.disabled{
    background: $color-gray
    border-color: $color-gray
    color #fff
  }
}