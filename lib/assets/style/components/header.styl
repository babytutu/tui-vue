.tui-header{
  display flex
  align-items: center;
  width: 100%
  height: 44px
  line-height 44px
  padding 0 10px
  background: #fff
  border-bottom-color: $color-border-gray
  z-index 10
  &-left{
    width: 90px
    text-align left
  }
  &-title{
    width: calc(100% - 180px)
    font-size: $font-size-l
    text-align center
  }
  &-right{
    width: 90px
    text-align right
  }
  &.is-fixed{
    position fixed
    z-index 10
    top 0
    left 0
    right 0
  }
}