.tui-slip{
  width: 100%;
  height: 100%;
  position: relative;
  &-content{
    position: relative;
    width: 100%;
    height: 100%;
    background:#fff;
    z-index: 1;
    // 设置过渡动画
    transition: 0.5s;
  }
  &-right{
    position: absolute;
    width: auto;
    height: 100%;
    right: 0;
    top: 0;
    display flex
    align-items center
    justify-content center
    background: $color-red
    color: $color-white
  }
}