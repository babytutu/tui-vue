.tui-cell
  overflow: hidden
  display flex
  align-items: center;
  justify-content: space-between;
  min-height: 50px
  width: 100%
  z-index 10
  padding 0 10px
  border-bottom-color: $color-border-gray
  font-size: $font-size-s
  line-height 1
  background: #fff
  color: $color-dark
  &-title
    text-align left
    flex: 1

  &-right
    text-align right
    display: flex;
    justify-content: flex-end;
    input
      text-align: right
      width: 100%;
      text-overflow: ellipsis;
      overflow: hidden;
  &.noborder
    border: none
