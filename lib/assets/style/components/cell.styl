.tui-cell
  display flex
  align-items: center;
  z-index 10
  height: 50px
  padding 0 10px
  border-bottom-color: $color-border-gray
  background: #fff
  color: $color-dark
  line-height 50px
  &-title
    font-size: $font-size-s
    text-align left

  &-right
    text-align right
    flex 1
    display: flex;
    justify-content: flex-end;
    input
      text-align: right
      width: 100%;
      text-overflow: ellipsis;
      overflow: hidden;
  &.noborder
    border: none
