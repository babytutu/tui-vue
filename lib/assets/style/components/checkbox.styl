.tui-checkbox
  input
    position relative
    width 20px
    height 20px
    margin-right: 10px
    vertical-align: middle;
    border-radius: 100%
    background: $color-white
    border 1px solid $color-border-gray
    transition: all .3s
    &:checked
      background: $color-primary
      border-color $color-primary

    &:checked::after
      color: $color-white
      content: "\00a0"
      display: inline-block;
      border: 2px solid $color-white;
      border-top-width: 0;
      border-right-width: 0;
      width: 10px;
      height: 5px;
      transform: rotate(-50deg);
      position: absolute;
      top:4px;
      left:3px;

    &:disabled
      background: $color-border-gray
      border-color $color-border-gray

    &:disabled:checked::after
      color: $color-white
      content: "\00a0"
      display: inline-block;
      border: 2px solid $color-white;
      border-top-width: 0;
      border-right-width: 0;
      width: 10px;
      height: 5px;
      transform: rotate(-50deg);
      position: absolute;
      top:4px;
      left:3px;